{
  "name": "textimation",
  "version": "0.1.7",
  "description": "Animated Text",
  "homepage": "https://github.com/TheeKia/textimation#readme",
  "bugs": {
    "url": "https://github.com/TheeKia/textimation/issues"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheeKia/textimation.git"
  },
  "scripts": {
    "build": "bunup --env.NODE_ENV='production' --minify --no-sourcemap --footer '// built with love'",
    "dev": "bun run --cwd test/ui dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "release": "bumpp --commit --push --tag",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/react": "^19.2.7",
    "bumpp": "^10.3.2",
    "bunup": "^0.16.11",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "typescript": ">=4.5.0",
    "usehooks-ts": "^3.1.1"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "workspaces": [
    "test/**"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./styles.css": "./dist/index.css",
    "./package.json": "./package.json"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "trustedDependencies": [
    "@bunup/dts"
  ]
}
